# another example here https://learn.microsoft.com/en-us/dotnet/fundamentals/code-analysis/code-style-rule-options
# .editorconfig for .NET/C# Monorepo

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# C# files
[*.cs]
# Use four spaces for indentation
indent_size = 4
# Require 'this.' for instance members
dotnet_style_qualification_for_field = true:suggestion
dotnet_style_qualification_for_property = true:suggestion
dotnet_style_qualification_for_method = true:suggestion
dotnet_style_qualification_for_event = true:suggestion
# Prefer 'var' when the type is apparent
dotnet_style_require_var_for_local = true:suggestion
# Prefer explicit type when the type is not apparent
dotnet_style_require_var_when_type_is_not_apparent = false:suggestion
# Use expression-bodied members when possible
csharp_style_expression_bodied_methods = true:suggestion
csharp_style_expression_bodied_properties = true:suggestion
csharp_style_expression_bodied_ctors = true:suggestion
# Place 'using' directives outside namespace
dotnet_sort_system_directives_first = true
csharp_using_directive_placement = outside_namespace:suggestion
# Prefer 'readonly' for fields
dotnet_style_readonly_field = true:suggestion

# Test files (optional: relax certain rules)
[*.Tests.cs]
dotnet_style_qualification_for_field = false:none
dotnet_style_qualification_for_property = false:none

# JSON, YAML, Markdown, etc.
[*.json]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
insert_final_newline = true

[*.yml]
indent_style = space
indent_size = 2
